<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-main">
      <div class="footer-content">
        <div class="footer-brand">
          <% if (footer && footer.logo) { %>
            <div class="site-logo">
              <a href="<%= footer.logo.url %>" class="logo-link">
                <img src="<%= footer.logo.image %>" alt="<%= footer.logo.alt %>" width="120" height="120" loading="lazy" class="logo-image">
              </a>
            </div>
            <h6 class="site-tagline"><%= footer.tagline %></h6>
          <% } %>
        </div>
      </div>
      <div class="footer-bottom">
        <p class="copyright">
          BambiSleep Community Profiles &copy; <%= new Date().getFullYear() %>
        </p>
        <p class="credits">
          Created by <a href="https://www.youtube.com/@Melkanea" target="_blank">MELKANEA</a>
        </p>
      </div>
    </div>
  </div>
</footer>