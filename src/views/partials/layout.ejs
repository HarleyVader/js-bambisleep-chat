<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./head.ejs') %>
  <% if (locals.title) { %>
    <title><%= title %></title>
  <% } %>
  <% if (locals.styles) { %>
    <% styles.forEach(style => { %>
      <link rel="stylesheet" href="<%= style %>">
    <% }) %>
  <% } %>
</head>
<body>
  <%- include('./nav.ejs') %>
  
  <main class="container" style="width: 95%; max-width: 95%;">
    <%- content %>
  </main>
  
  <%- include('./footer.ejs') %>
  <% if (locals.scripts) { %>
    <% scripts.forEach(script => { %>
      <script src="<%= script %>"></script>
    <% }) %>
  <% } %>
</body>
</html>