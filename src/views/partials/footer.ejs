<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-main">
      <h5 class="footer-heading"><strong><em>FOOTER</em></strong></h5>
      <hr class="divider">
      <div class="footer-content">
        <div class="footer-brand">
          <div class="site-logo">
            <% if (footer && footer.logo) { %>
              <a href="<%= footer.logo.url %>" class="logo-link">
                <img src="<%= footer.logo.image %>" alt="<%= footer.logo.alt %>" width="256" height="256" loading="lazy" class="logo-image">
              </a>
            <% } %>
          </div>
          <% if (footer && footer.tagline) { %>
            <h6 class="site-tagline"><%= footer.tagline %></h6>
          <% } %>
        </div>
        <div class="footer-nav-container">
          <div class="footer-column">
            <nav class="footer-nav" aria-label="Primary Footer">
              <p>CONTROL</p>
              <ul class="nav-list">
                <% if (footer && footer.primaryLinks) { %>
                  <% footer.primaryLinks.slice(0, 6).forEach(link => { %>
                    <li class="nav-item">
                      <a href="<%= link.url %>" 
                         <%= link.external ? 'target="_blank"' : '' %> 
                         class="nav-link">
                        <%= link.label %>
                      </a>
                    </li>
                  <% }); %>
                <% } %>
              </ul>
            </nav>
          </div>
          <div class="footer-column">
            <nav class="footer-nav" aria-label="Secondary Footer">
              <p>CORE</p>
              <ul class="nav-list">
                <% if (footer && footer.secondaryLinks) { %>
                  <% footer.secondaryLinks.slice(0, 6).forEach(link => { %>
                    <li class="nav-item">
                      <a href="<%= link.url %>" 
                         <%= link.external ? 'target="_blank"' : '' %> 
                         class="nav-link">
                        <%= link.label %>
                      </a>
                    </li>
                  <% }); %>
                <% } %>
              </ul>
            </nav>
          </div>
          <div class="footer-column">
            <nav class="footer-nav" aria-label="Tertiary Footer">
              <p>COMMUNITY</p>
              <ul class="nav-list">
                <% if (footer && footer.tertiaryLinks) { %>
                  <% footer.tertiaryLinks.slice(0, 6).forEach(link => { %>
                    <li class="nav-item">
                      <a href="<%= link.url %>"
                         <%= link.external ? 'target="_blank"' : '' %>
                         class="nav-link">
                        <%= link.label %>
                      </a>
                    </li>
                  <% }); %>
                <% } %>
              </ul>
            </nav>
          </div>
          <div class="footer-column">
            <nav class="footer-nav" aria-label="Quaternary Footer">
              <p>SPECIAL THANKS</p>
              <ul class="nav-list">
                <% if (footer && footer.quaternaryLinks) { %>
                  <% footer.quaternaryLinks.slice(0, 6).forEach(link => { %>
                    <li class="nav-item">
                      <a href="<%= link.url %>"
                         <%= link.external ? 'target="_blank"' : '' %>
                         class="nav-link">
                        <%= link.label %>
                      </a>
                    </li>
                  <% }); %>
                <% } %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
      <hr class="divider">
      <div class="footer-bottom">
        <% if (footer && footer.logo) { %>
          <p class="copyright">
            <a href="<%= footer.logo.url %>"><%= footer.logo.alt %></a> Â® <%= new Date().getFullYear() %>
          </p>
        <% } %>
        <p class="credits">
          <a href="https://en.wikipedia.org/wiki/Solution_stack" target="_blank">Solution Stack</a> by 
          <a href="https://www.youtube.com/@Melkanea" target="_blank">MELKANEA</a>
        </p>
      </div>
    </div>
  </div>
</footer>