<div class="image-generator-container">
  <h3>Image Generator <span id="worker-status-indicator" class="status-indicator" title="Checking worker status..."></span></h3>
  
  <!-- Preset buttons -->
  <div id="preset-container" class="preset-container mb-3"></div>
  
  <form id="image-generator-form" class="mb-3">
    <div class="form-group mb-2">
      <label for="image-prompt">Prompt:</label>
      <textarea id="image-prompt" class="form-control" rows="3" placeholder="Describe the image you want to generate..." required></textarea>
    </div>
    
    <div class="form-group mb-2">
      <label for="image-negative-prompt">Negative Prompt (optional):</label>
      <textarea id="image-negative-prompt" class="form-control" rows="2" placeholder="Describe what you DON'T want in the image..."></textarea>
    </div>
    
    <div class="row mb-2">
      <div class="col-6">
        <div class="form-group">
          <label for="image-width">Width:</label>
          <input type="number" id="image-width" class="form-control" min="64" max="1024" step="64" value="512">
        </div>
      </div>
      <div class="col-6">
        <div class="form-group">
          <label for="image-height">Height:</label>
          <input type="number" id="image-height" class="form-control" min="64" max="1024" step="64" value="512">
        </div>
      </div>
    </div>
    
    <!-- Quick preset buttons -->
    <div class="preset-buttons mb-2">
      <div class="preset-label mb-1">Quick Sizes:</div>
      <div class="btn-group btn-group-sm" role="group">
        <button type="button" class="btn btn-outline-secondary preset-btn" data-size="512x512">512×512</button>
        <button type="button" class="btn btn-outline-secondary preset-btn" data-size="768x512">768×512</button>
        <button type="button" class="btn btn-outline-secondary preset-btn" data-size="512x768">512×768</button>
        <button type="button" class="btn btn-outline-secondary preset-btn" data-size="1024x1024">1024×1024</button>
      </div>
    </div>
    
    <div class="d-grid">
      <button type="submit" id="generate-image-btn" class="btn btn-primary">Generate Image</button>
    </div>
  </form>
  
  <div id="image-generation-status" class="status mb-2"></div>
  
  <div id="image-result" class="image-result-container"></div>
</div>

<style>
  .image-generator-container {
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 10px;
    padding: 15px;
    margin-bottom: 20px;
  }
  
  .image-result-container {
    max-width: 100%;
    margin-top: 15px;
    text-align: center;
  }
  
  .generated-image {
    max-width: 100%;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  }
  
  .status {
    padding: 8px;
    border-radius: 4px;
    text-align: center;
  }
  
  .status.error {
    background-color: rgba(220, 53, 69, 0.7);
    color: white;
  }
  
  .status.success {
    background-color: rgba(40, 167, 69, 0.7);
    color: white;
  }
  
  .status.loading {
    background-color: rgba(0, 123, 255, 0.7);
    color: white;
  }
  
  .download-btn {
    display: inline-block;
    margin-top: 10px;
  }
  
  .preset-buttons {
    display: flex;
    flex-direction: column;
  }
  
  .preset-label {
    font-size: 0.85rem;
    opacity: 0.8;
  }

  @keyframes pulse {
    0% { opacity: 0.6; }
    50% { opacity: 1; }
    100% { opacity: 0.6; }
  }
  
  .status.loading {
    animation: pulse 2s infinite;
  }
  
  .preset-container {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .preset-button {
    background-color: rgba(50, 50, 50, 0.7);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    padding: 5px 10px;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
    .preset-button:hover {
    background-color: rgba(70, 70, 70, 0.8);
    border-color: rgba(255, 255, 255, 0.5);
  }
  
  .status-indicator {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-left: 8px;
    background-color: #666;
    transition: background-color 0.3s ease;
  }
  
  .status-indicator.healthy {
    background-color: #4CAF50;
    box-shadow: 0 0 5px #4CAF50;
  }
  
  .status-indicator.unhealthy {
    background-color: #F44336;
    box-shadow: 0 0 5px #F44336;
  }
</style>

<script>
  // Add event listeners for preset buttons
  document.addEventListener('DOMContentLoaded', () => {
    const presetButtons = document.querySelectorAll('.preset-btn');
    const widthInput = document.getElementById('image-width');
    const heightInput = document.getElementById('image-height');
    
    presetButtons.forEach(button => {
      button.addEventListener('click', () => {
        const size = button.getAttribute('data-size');
        if (!size) return;
        
        const [width, height] = size.split('x');
        if (widthInput) widthInput.value = width;
        if (heightInput) heightInput.value = height;
      });
    });
  });
</script>
