                        <button type="submit">Submit Comment</button>
                    </form>
                </div>
            </div>

            <!-- Scraped Content Modal -->
            <div id="content-modal" class="modal">
                <div class="modal-content content-modal-content">
                    <span class="close-btn content-close-btn">&times;</span>
                    <h3 id="content-modal-title">Scraped Content</h3>
                    <div class="content-modal-header">
                        <div id="content-url" class="content-url"></div>
                        <div id="content-status" class="content-status"></div>
                    </div>
